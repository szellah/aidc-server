{
    "source": {
      "include": ["serverResponses" , "handlers","./README.md"],
       "includePattern": ".js$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component",
        "node_modules/better-docs/category",
		"node_modules/better-docs/typescript"
    ],
    "opts": {
		"template": "./node_modules/better-docs",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "better-docs": {
            "name": "Server AIDC"
        }
    }
  }
